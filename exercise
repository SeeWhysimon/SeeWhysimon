//exercise 5.20

#include <iostream>
#include <vector>

int main()
{
	std::string preword = "", word = "";
	int cnt = 0;

	while (std::cin >> word) {
		if (word == preword) {
			++cnt;
			break;
		}
		else preword = word;
	}
	if (cnt == 0) std::cout << "no word was repeated" << std::endl;
	else std::cout << preword << " repeated twice" << std::endl;
	return 0;
}

//exercise 5.24

#include <iostream>

int main()
{
	double a, b;
	while (std::cin >> a >> b) {
		try {
			if (b != 0)
				std::cout << a/b << std::endl;
			else
				throw runtime_error("number divided by 0");
		}
		catch (runtime_error err) {
			std::cout << err.what() << "\nTry Again? Enter y or n" << std::endl;
			char c;
			std::cin >> c;
			if (!std::cin || c == 'n')
				break;
		}
	}
	return 0;
}

